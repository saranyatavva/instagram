<%- include('./partials/navbar') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="profile.css">
</head>
<body>
    
    <header>
         
        <div class="container">
        
            <div class="profile">
    
                <div class="profile-image">
    
                    <img src="<%=they.pic %>" alt="">
    
                </div>
    
                <div class="profile-user-settings">
    
                    <h1 class="profile-user-name"><%=they.name%></h1>
                    
                    <% if(user.following.includes( they._id.toString() )){ %>
                    <button type="submit" class="btn btn-primary" onclick="unfollow('<%= they._id%>')">Unfollow</button>
                    <% } else { %>
                      <button type="submit" class="btn btn-primary" onclick="hey('<%= they._id%>')">Follow</button>
                      <% } %>

                    
                   
    
                    <button class="hello profile-settings-btn" aria-label="profile settings"><i class="fas fa-cog" aria-hidden="true"></i></button>
    
                </div>
    
                <div class="profile-stats">
    
                    <ul>
                        <li><span class="profile-stat-count"><%= mypost.length %></span> Posts</li>
                        <li><span class="profile-stat-count"><%= they.followers.length %></span> Followers</li>
                        <li><span class="profile-stat-count"><%= they.following.length %></span> Following</li>
                    </ul>
    
                </div>
    
                <div class="profile-bio">
    
                    <p><div class="profile-real-name"><%= they.name%> </div><%=they.bio %></p>
    
                </div>
    
            </div>
    
        </div>
        <style>
            .sidenav-profile-photo {
             width: 15px;
             height: 15px;
             position: relative;
           }
     
         </style>
    
    </header>
    
    <main>
        
     
    
        <div class="container">
            
            <div class="gallery">
                <% mypost.forEach(function(p){ %>
                <div class="gallery-item">
                    
    
                    <a href="#" data-bs-toggle="modal" data-bs-target="#staticBackdrop" ><img src="<%= p.photo %>" class="gallery-image" alt=""/></a>
                    <div class="modal fade" id="staticBackdrop" tabindex="-1" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="staticBackdropLabel" aria-hidden="true"  >
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                          <div class="modal-content">
                            
                            <div class="modal-body">
                              <div class="container">
                                <div class="row">
                                    <div class="col-md-6">
                                      <img src="https://images.unsplash.com/photo-1625238967688-736bb7428375?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80" style=" width: 100%;height: 475px"/>
                                    </div>
                                    <div class="col-md-6">
                                   
                                      <div class="d-flex flex-row align-items-center border-bottom pb-2">
                                        <div
                                            class="rounded-circle overflow-hidden d-flex justify-content-center align-items-center border sidenav-profile-photo">
                                            <img src="https://images.unsplash.com/photo-1517677129300-07b130802f46?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTZ8fGdpcmx8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt=""
                                                style="transform: scale(1.5); width: 100%; position: absolute; left: 0;">
                                        </div>
                                        <div class="profile-info">
                                            <a href="/mypost" style="color:#212529; margin-left: 17px; text-decoration: none;"><span class="profile-info-username">akhila.priya_</span></a>
                              
                                        </div>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-three-dots-vertical dropdown-toggle" viewBox="0 0 16 16" style="margin-left:150px" data-bs-toggle="dropdown" aria-expanded="false" id="dropdownMenuLink">
                                          <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                        </svg>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                          <li><a class="dropdown-item" href="#">Edit Post</a></li>
                                          <li><a class="dropdown-item" href="#">Delete Post</a></li>
                                          
                                        </ul>
                                      </div>
                                   
                                  </div>     
                    
                              </div>
                            </div>
                            <div class="modal-footer" style="margin-top: 20px;">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                        </div>
                      </div>
                    </div>
    








                    <div class="gallery-item-info">
    
                        <ul>
                            <li class="gallery-item-likes"><span class="visually-hidden">Likes:</span><i class="fas fa-heart" aria-hidden="true"></i><%=p.likes.length %></li>
                            <li class="gallery-item-comments"><span class="visually-hidden">Comments:</span><i class="fas fa-comment" aria-hidden="true"></i> <%=p.comments.length %></li>
                        </ul>
    
                    </div>
    
                </div>
                <% }); %>
            </div>
           
            </div>
            

    
            </div>
            
    
    </main> 



   

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</body>
</html>

<script type="text/javascript">
    // $('#pop').click(function(){
    //     $("#staticBackdrop").modal('show')
        
    // })
    $('button').click(function(){
  var $this = $(this);
  if($this.is('.follow')){
    $this.toggleClass('following')
    $this='following'
  }
 
  if($this.is('.following')){
    $this.addClass('wait');
    $this='follow'
  }
}).on('mouseleave',function(){
  $(this).removeClass('wait');
})

function hey(followId) {
    $.ajax({
        url: '/follow',
        dataType: 'json',
        type: 'POST',
        contentType: 'application/json',
        data:JSON.stringify({followId: followId}),
        success: function (result) {
           console.log(result)
        }
    });
    }
    function unfollow(unfollowId) {
    $.ajax({
        url: '/unfollow',
        dataType: 'json',
        type: 'POST',
        contentType: 'application/json',
        data:JSON.stringify({unfollowId: unfollowId}),
        success: function (result) {
           console.log(result)
        }
    });
    }

    






    </script>